pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/PoojaReddyN/CalculatorTestng.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Test') {
             steps {
                        sh 'mvn test'
                    }
                }

        stage('Deploy') {
             steps {
                        echo 'Deploying application...'
                        // Add deployment commands here
                    }
                }
            }

            post {
                success {
                    echo 'Build and tests passed successfully!'
                }
                failure {
                    echo 'Build failed. Check the logs.'
                }
            }
        }
